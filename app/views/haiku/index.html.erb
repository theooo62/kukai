<table  border="1">

  <div class="field" for="">



    <div class="field-No">
      <tr>
        <% numbers = 30 %>
        <% while numbers > 0 do %>
        <td><p class="Tategaki"><%= numbers %></p></td> 
        <% numbers = numbers - 1 %>
        <% end %>
        <th><p class="Tategaki">No</p></th>
      </tr>
    </div>

    <div class="field-sen">
      <tr>
      <% numbers = 30 %>
        <% while numbers > 0 do %>
        <td><p class="Tategaki"><%= "" %></p></td> 
        <% numbers = numbers - 1 %>
        <% end %>
        <th><p class="Tategaki">評価</p></th>
      </tr>
    </div>

    <div class="field-haikutext">
      <tr>
				<% numbers = 30 %>
        <% while numbers > 0 do %>
        <% @haikus.shuffle.each do |haiku| %> <!-- controllerで.allでとってきたデータは配列。それをshuffle -->
        <td><p class="Tategaki"><%= haiku.text %></p></td> 
        <% numbers = numbers - 1 %>
        <% end %>
        <% end %>
        <th><p class="Tategaki">俳句</p></th>
      </tr>
    </div>
  </div>
</table>